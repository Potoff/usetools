<div>
  <a
    href="#offcanvas-slide"
    uk-icon="menu"
    class="uk-icon-button uk-margin-small-top uk-margin-small-left"
    uk-toggle
  ></a>
  <div id="offcanvas-slide" uk-offcanvas>
    <div class="uk-offcanvas-bar">
      <ul class="uk-nav uk-nav-default">
        <li class="uk-nav-header">Liens</li>
        <li><a href="/admin">Ajouter un lien</a></li>
        <li class=""><a href="/admin/allLink">Liste des liens</a></li>
        <li class="uk-nav-divider"></li>
        <li class="uk-nav-header">Catégories</li>
        <li><a href="/admin/newCategoryForm">Ajouter une catégorie</a></li>
        <li><a href="/admin/allCategories">Liste des
            catégories</a></li>
        <li class="uk-nav-divider"></li>
      </ul>
    </div>
  </div>
</div>

<div
  class="uk-container uk-margin-medium-top uk-card uk-card-default uk-card-body"
>
<h3>Modifier un lien</h3>
{{#link}}
  <div class="uk-card-body">
    <form method="post" action="/admin/updateLink/{{id}}" class="uk-form-stacked">
    <div class="uk-margin">
        <label class="uk-form-label" for="form-stacked-text">Nom :</label>
        <div class="uk-form-controls">
          <input
            class="uk-input"
            id="name"
            name="name"
            type="text"
            value="{{name}}"
            required
          />
        </div>
      </div>
      <div class="uk-margin">
        <label class="uk-form-label" for="form-stacked-text">Url :</label>
        <div class="uk-form-controls">
          <input
            class="uk-input"
            id="url"
            name="url"
            type="text"
            value="{{url}}"
            required
          />
        </div>
      </div>
      <div class="uk-margin">
        <textarea class="uk-textarea" name="description" id="description" cols="15" rows="5" placeholder="{{description}}" aria-label="Textarea">{{description}}</textarea>
        </div>
      </div>
      <div class="uk-margin">
        <label class="uk-form-label" for="form-stacked-text">Lien de l'image :</label>
        <div class="uk-form-controls">
          <input
            class="uk-input"
            id="img_url"
            name="img_url"
            type="text"
            value="{{img_url}}"
          />
        </div>
      </div>
      
      <div class="uk-margin">
            <select class="uk-select" aria-label="Select" id="categoryId" name="categoryId" required>
                <option selected value="{{Category.id}}">{{Category.name}}</option>
                {{/link}}
                {{#categories}}
                <option value={{id}}>{{name}}</option>
                {{/categories}}
            </select>
        </div>
        
      <button class="uk-button uk-button-default" type="submit">Valider</button>
    </form>
    {{#if message}}
    <div class="uk-alert-success" uk-alert>
      <a class="uk-alert-close" uk-close></a>
      <p>{{ message }}</p>
    </div>
  {{/if}}
  {{#if error}}
  <div class="uk-alert-warning" uk-alert>
      <a class="uk-alert-close" uk-close></a>
      <p>{{ error }}</p>
    </div>
  {{/if}}
  </div>
</div>